/* pages/category/index.wxss */
.header{
  width: 100%;
  height: 10%;
  text-align: center;
}
.input{
  display: inline-block;
  width: 75%;
  border:1px solid #eee;
  text-align: left;
  height: 60rpx;
  border-radius: 60rpx;
  padding-left: 30rpx;
  font-size: 13px;
}
.mian{
  display: flex;
  height:90% ;
 background:#eee
}
.mian_lift{
  height: 100%;
  overflow: auto;
  width: 25vw;
  font-size: 16px;
  text-align:center;
  line-height:50px;
  margin-right:15rpx;
  background:#fff
}
.main_right{
  flex: 1;
  height: 100%;
  overflow: hidden;
  background:#fff
}
.active{
  color:#fff;
  padding:10rpx 15rpx;
  background:burlywood;
  border-radius: 30rpx;
}
.main_right_content{
  height: 100%;
  width: 100%;
 overflow: auto;
}
.avatarimg{
  width:98%; 
  border-radius: 10rpx;
  margin:1%
}
.main_right_list{
  width: 100%;
}
.main_right_list .lista{
  width: 31%;
  float: left;
  margin:1%;
  font-size: 13px;
  text-align:center
  
}
.main_right_list .lista>image{
  width: 100%;
  margin-bottom:10rpx
}
.main_right_list::after{
  content:'';
  display: block;
  clear: both;
}

